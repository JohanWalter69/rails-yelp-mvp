<h1> Restaurants</h1>
  <% @restaurants.each do |restaurant| %>
    <div class="card">
      <%= restaurant.name %>
      <%= restaurant.address %>
      <%= restaurant.category %>
      <p><%= link_to "Show this restaurant", restaurant_path(restaurant) %></p>
    </div>
  <% end %>
<%= link_to "Add a restaurant", new_restaurant_path %>
